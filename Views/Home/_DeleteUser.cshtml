@model Book_Lending.Models.Book.User
@{
    var Name = $"{Model.Name} {Model.Surname}";
}
@using (Html.BeginForm("DeleteUser","Home", FormMethod.Post))
{
<div class="modal" id="deleteUserModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <p>Are you sure you want to remove @Name to User List?</p>
            </div>
            <div class="modal-footer">
                <input type="hidden" name="UserId" value="@Model.UserId" />
                <button type="submit" class="btn btn-primary">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
}